{
  "name": "@onivue/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all build:js build:css ",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:js": "tsup src/index.ts --format esm,cjs --dts --minify --external react --clean",
    "clean": "rm -rf .swc .turbo coverage dist storybook-static",
    "dev": "npm-run-all --parallel dev:* ",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify --watch",
    "dev:js": "tsup src/index.ts --format esm,cjs --dts --minify --external react --watch",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev --quiet --port 6006",
    "test:unit": "jest --ci --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "tailwindcss": "3.3.2",
    "tsup": "^6.7.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "7.0.8",
    "@storybook/addon-essentials": "7.0.8",
    "@storybook/addon-interactions": "7.0.8",
    "@storybook/addon-links": "7.0.8",
    "@storybook/addon-styling": "1.0.6",
    "@storybook/addon-viewport": "7.0.8",
    "@storybook/blocks": "7.0.8",
    "@storybook/jest": "0.1.0",
    "@storybook/manager-api": "7.0.8",
    "@storybook/nextjs": "7.0.8",
    "@storybook/react": "7.0.8",
    "@storybook/testing-library": "0.1.0",
    "@storybook/theming": "7.0.8",
    "jest-config": "workspace:*",
    "storybook": "7.0.8",
    "tailwindcss-config": "workspace:*",
    "typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "@headlessui/react": "^1.7.13",
    "clsx": "^1.2.1",
    "next": "^13.2.4",
    "react": "^18.2.0"
  }
}
