{
  "name": "@onivue/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.tsx",
    "./*": [
      "./src/components/*.tsx"
    ]
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/*",
        "./src/*/index"
      ]
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "clean": "rm -rf .swc .turbo coverage dist storybook-static",
    "dev": "pnpm build --watch",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev --quiet --port 6006",
    "test:unit": "jest --ci --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "7.0.11",
    "@storybook/addon-essentials": "7.0.11",
    "@storybook/addon-interactions": "7.0.11",
    "@storybook/addon-links": "7.0.11",
    "@storybook/addon-styling": "1.0.6",
    "@storybook/addon-viewport": "7.0.11",
    "@storybook/blocks": "7.0.11",
    "@storybook/jest": "0.1.0",
    "@storybook/manager-api": "7.0.11",
    "@storybook/nextjs": "7.0.11",
    "@storybook/react": "7.0.11",
    "@storybook/testing-library": "0.1.0",
    "@storybook/theming": "7.0.11",
    "jest-config": "workspace:*",
    "storybook": "7.0.11",
    "tailwindcss-config": "workspace:*",
    "typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "@headlessui/react": "^1.7.13",
    "clsx": "^1.2.1",
    "next": "^13.2.4",
    "react": "^18.2.0"
  }
}
